{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "jekyll build",
            "command": "bundle",
            "args": [
                "exec",
                "jekyll",
                "build",
                "--source",
                "${cwd}",
                "--config",
                "_config.yml",
                "--watch",
                "--incremental"
            ],
            "isBackground": true,
            "promptOnClose": true,
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
